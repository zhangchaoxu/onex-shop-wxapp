<view class="tui-userinfo-box">
		<tui-list-cell padding="0" arrow  bindclick="changeAvatar">
			<view class="tui-list-cell">
				<view>头像</view>
				<image src="/static/images/my/mine_def_touxiang_3x.png" class="tui-avatar"></image>
			</view>
		</tui-list-cell>
		<tui-list-cell padding="0" hover="{{false}}">
			<view class="tui-list-cell tui-pr30">
				<view>用户名</view>
				<view class="tui-content">ThorUI</view>
			</view>
		</tui-list-cell>
		<tui-list-cell padding="0" arrow  bindclick="nickname">
			<view class="tui-list-cell">
				<view>昵称</view>
				<view class="tui-content">echo.</view>
			</view>
		</tui-list-cell>
		<tui-list-cell padding="0" arrow  bindclick="changeSex">
			<view class="tui-list-cell">
				<view>性别</view>
				<view class="tui-content">{{sex}}</view>
			</view>
		</tui-list-cell>
	 <picker mode="date" bindchange="changeDate">
	 	<tui-list-cell padding="0" arrow unlined >
			<view class="tui-list-cell">
				<view>出生日期</view>
				<view class="tui-content">{{date}}</view>
			</view>
		</tui-list-cell>
	 </picker>
	</view>