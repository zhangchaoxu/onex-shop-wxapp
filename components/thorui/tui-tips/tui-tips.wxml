<block wx:if="{{position=='top'}}">
	<view class="tui-tips-class tui-toptips {{show?'tui-top-show':''}}" style="background-color:{{backgroundColor}};color:{{color}};font-size:{{size}}rpx" >{{msg}}</view>
</block>
<block wx:else>
	<view class="tui-tips-class tui-toast {{position=='center'?'tui-centertips':'tui-bottomtips'}} {{show?'tui-toast-show':''}}">
		<view class="tui-tips-content" style="background-color:{{backgroundColor}};color:{{color}};font-size:{{size}}rpx">
			{{msg}}
		</view>
	</view>
</block>